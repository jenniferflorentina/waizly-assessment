  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn prisma:generate && yarn prisma:migrate && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn prisma:generate && yarn prisma:migrate && node dist/main",
    "start:watch": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.unit.js",
    "test:e2e": "jest --config ./jest.supertest.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "prisma:migrate": "npx prisma migrate dev --schema prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema prisma/schema.prisma",
    "prisma:dbpush": "npx prisma db push --schema prisma/schema.prisma"
  },
